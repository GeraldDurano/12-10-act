	<script type="text/javascript">
		function first()
		{
			var variant3 = Number(document.getElementById("Coffee").value);
			var gwapoko3;
			if (isNaN(variant3))
			{
				alert("Invalid")
			}
			else
			{
				if (variant3 > 49)
					gwapoko3 = variant3 - 50
				{
					document.getElementById("result").innerHTML = "Enjoy your Coffee!! Your change is";
					document.getElementById("result1").innerHTML = gwapoko3;
				}
			}
		}
		function second()
		{
			var variant2 = Number(document.getElementById("Coffee").value);
			var gwapoko2;
			if (isNaN(variant2))
			{
				alert("Invalid")
			}
			else
			{
				if (variant2 > 29)
					gwapoko2 = variant2 - 30
				{
					document.getElementById("result").innerHTML = "Enjoy your Coffee!! Your change is";
					document.getElementById("result1").innerHTML = gwapoko2;
				}
			}
		}
		function second()
		{
			var variant1 = Number(document.getElementById("Coffee").value);
			var gwapoko;
			if (isNaN(variant1))
			{
				alert("Invalid")
			}
			else
			{
				if (variant1 > 24)
					gwapoko = variant1 - 25
				{
					document.getElementById("result").innerHTML = "Enjoy your Coffee!! Your change is";
					document.getElementById("result1").innerHTML = gwapoko;
				}
			}
		}
